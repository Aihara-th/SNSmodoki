<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :handlename %>
  <%= f.text_field :handlename, class: 'form-control'  %>

  <%= f.label :sex %>
  <%= f.radio_button :sex, "0" %>男  <%= f.radio_button :sex, "1" %>女<br />

  <%= f.label :syear %>
  <%= f.number_field :syear, class: 'form-control' %>

  <%= f.label :bplace %>
  <%= f.text_field :bplace, class: 'form-control' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :tel %>
  <%= f.text_field :tel, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
