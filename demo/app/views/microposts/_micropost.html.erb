<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.person, size: 50), micropost.person %>
  <span class="person"><%= link_to micropost.person.handlename, micropost.person %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    comments（<%= micropost.comments.count %>）
    <br>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_person?(micropost.person) %>
    <%= link_to "delete", micropost, method: :delete,
    data: { confirm: "You sure?" } %>
    <% end %>
    <h4 ><%= link_to "more details", page_path(micropost) %></h4>
  </span>
</li>
