<div class="message" data-session="<%= session[:person_id] %>">
  <% person = Person.find_by(id: message.from_id) %>
  <p class="<%= message.id %>" id="message_sender"><%= person.handlename %></p>
  <p class="<%= message.id %>" id="message_content"><%= message.content %></p>
  <script type="text/javascript">
    var from_id = <%= message.from_id %>;
    var current_person_id = $('.message').data('session');
    if(from_id == current_person_id){
      $('p.' + <%= message.id %>).css('text-align', 'right');
    }else{
      $('p.' + <%= message.id %>).css('text-align', 'left');
    }
  </script>
</div>
